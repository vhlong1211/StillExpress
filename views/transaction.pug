    // Custom styles
  body
    div.container
      h1 This is Library data

      form(action='/transaction/create',method='POST')
        div.form-group.d-flex

          select(name='userID' class='form-control' style='width:400px')
            each item in users
              option(value=item.id) 
                span=item.name
          select(name='bookID' class='form-control' style='width:400px')
            each item in books
              option(value=item.id) 
                span= item.title
          button Create
      
      table.table(style='margin-top:100px')
        thead
           tr 
            th UserId
            th BookId
            th Status
        tbody
          each item in meow
            tr
              td 
                span=item.userId
              td
                span=item.bookId 
              td
                 a(href='/transaction/'+item.id+'/complete') Xong
    a(href='/' class='btn btn-success' style='margin-left:170px') Back

