  div(class='container')
    nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
      ul.navbar-nav
        li.nav-item
          a.nav-link(href='/books') Books
        li.nav-item
          a.nav-link(href='/users') Users
        li.nav-item
          a.nav-link(href='/transaction') Transaction
        li.nav-item
          a.nav-link(href='/products') Products
  .container(style='margin-top:100px')
        .d-flex.justify-content-center.h-50
          .card.h-50
            .card-header
              h3 Sign In
              .d-flex.justify-content-end.social_icon
                span
                  i.fab.fa-facebook-square
                span
                  i.fab.fa-google-plus-square
                span
                  i.fab.fa-twitter-square
            .card-body
              form(action='/auth/login',method="POST")
                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-user
                  input.form-control(type='email', placeholder='Enter email', name='email',value=values ? values.email : "")
                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-key
                  input.form-control(type='password', placeholder='Enter password', name='pass',value=values ? values.pass : "")
                .row.align-items-center.remember
                  input(type='checkbox')
                  | Remember Me
                .form-group
                  input.btn.float-right.login_btn(type='submit', value='Login')
            .card-footer
              .d-flex.justify-content-center.links
                | Don't have an account?
                a(href='#') Sign Up
              .d-flex.justify-content-center
                a(href='#') Forgot your password?



  if errors
    each error in errors
      .alert.alert-danger.text-center= error